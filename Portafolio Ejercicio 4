Script:
// CAMBIO DE VISTAS
const links = document.querySelectorAll(".menu a");
const vistas = document.querySelectorAll(".vista");

links.forEach(link => {
    link.addEventListener("click", e => {
        e.preventDefault();
        const vista = link.dataset.view;

        vistas.forEach(sec => sec.classList.remove("activa"));
        document.getElementById(vista).classList.add("activa");
    });
});

// FORMULARIO
const form = document.getElementById("contacto-form");
const asunto = document.getElementById("asunto");
const otroAsunto = document.getElementById("otro-asunto");

otroAsunto.style.display = "none";

asunto.addEventListener("change", () => {
    otroAsunto.style.display = asunto.value === "otro" ? "block" : "none";
});

form.addEventListener("submit", e => {
    e.preventDefault();
    let valido = true;

    valido &= validar("nombre", "Nombre obligatorio");
    valido &= validar("email", "Correo inv谩lido");
    valido &= validar("asunto", "Selecciona un asunto");
    valido &= validar("mensaje", "Mensaje obligatorio");

    if (asunto.value === "otro") {
        valido &= validar("especificar", "Especifica el asunto");
    }

    const terminos = document.getElementById("terminos");
    if (!terminos.checked) {
        document.getElementById("error-terminos").textContent = "Debes aceptar los t茅rminos";
        valido = false;
    } else {
        document.getElementById("error-terminos").textContent = "";
    }

    if (valido) {
        alert("Formulario enviado correctamente");
        form.reset();
    }
});

function validar(id, mensaje) {
    const campo = document.getElementById(id);
    const error = document.getElementById(`error-${id}`);

    if (!campo.value.trim()) {
        error.textContent = mensaje;
        campo.classList.add("error-campo");
        return false;
    } else {
        error.textContent = "";
        campo.classList.remove("error-campo");
        return true;
    }
}

